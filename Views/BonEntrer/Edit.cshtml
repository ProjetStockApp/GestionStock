@model StockApp.Models.TB_bonEntre

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-info text-center">Edition de la Requisition </h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>TB_bonEntre</h4>*@
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id_bon_entrestock)

        <div class="form-group">
            @Html.LabelFor(model => model.Date_entre, "Date Entrer", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Date_entre, new { @class = "form-control", @id = "dateEntrer" })
                @Html.ValidationMessageFor(model => model.Date_entre)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 4 })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Id_livraison, "Code Fiche Livraison", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Id_livraison", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Id_livraison)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DateCreer, "Date Creer", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DateCreer,  new { @class = "form-control", ReadOnly = "ReadOnly" })
                @Html.ValidationMessageFor(model => model.DateCreer)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CreerPar, "Creer par", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.CreerPar, new { @class = "form-control", ReadOnly = "ReadOnly" })
                @Html.ValidationMessageFor(model => model.CreerPar)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary btn-sm">
                    <span class="glyphicon glyphicon-save"></span> Enregistrer les modifications
                </button>
            </div>
        </div>
    </div>
}

<div>
    <a href="@Url.Action("Index")" class="btn btn-info">
        <span class="glyphicon glyphicon-arrow-left"></span> Retournez
    </a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">

        $(document).ready(function () {
            $("#dateEntrer").datepicker({

            });
        });
    </script>
}
