                @Html.TextBoxFor(model => model.Date_requisition,new { @class = "form-control", ReadOnly = "ReadOnly" })
                @Html.ValidationMessageFor(model => model.Date_requisition)
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 4 })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        @*<div class="form-group">
                @Html.LabelFor(model => model.UserId, "UserId", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
