        {
            <div class="form-group">
                @Html.LabelFor(model => model.DateCreer, "Date Creer", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.DateCreer, new { @class = "form-control", ReadOnly = "ReadOnly" })
                    @Html.ValidationMessageFor(model => model.DateCreer)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CreerPar, "Creer Par", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.CreerPar, new { @class = "form-control", ReadOnly = "ReadOnly" })
                    @Html.ValidationMessageFor(model => model.CreerPar)
                </div>
            </div>
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">
                    <span class="glyphicon glyphicon-save"></span> Ajouter
